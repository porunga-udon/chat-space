.message{data: {message: {id: message.id}}}
  .message-box
    .message-box__name
      = message.user.name
    .message-box__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message-text
    - if message.text.present?
      %p.message-text__content
        = message.text
    = image_tag message.image.url, class: 'message-text_image' if message.image.present?

